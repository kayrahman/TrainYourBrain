<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    tools:context="com.nkr.neel.trainyourbrain.MainActivity"
    android:background="#51b46d">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let&apos;s Start"
        android:id="@+id/startBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:onClick="start"
        android:visibility="visible"
        android:background="#10ffffff"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:elevation="8dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/gameRelativeLayout"

        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time : "
            android:textSize="26sp"
            android:id="@+id/timeRemainingHardCoded"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textColor="#eeeeee"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30s"
            android:id="@+id/remSecondsTxt"
            android:textSize="26sp"
            android:layout_alignBaseline="@+id/timeRemainingHardCoded"
            android:layout_toRightOf="@+id/timeRemainingHardCoded"
            android:textStyle="bold"
            android:textColor="#eeeeee"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:id="@+id/scoreTxt"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#eeeeee"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30+20"
            android:id="@+id/sumTxt"
            android:textSize="30sp"
            android:padding="15dp"
            android:layout_below="@+id/remSecondsTxt"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#eeeeee"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="= ?"
            android:textSize="26sp"
            android:id="@+id/textView2"
            android:layout_alignBaseline="@+id/sumTxt"
            android:layout_toRightOf="@+id/sumTxt"
            android:layout_toEndOf="@+id/sumTxt"
            android:textStyle="bold"
            android:textColor="#eeeeee"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score :"
            android:layout_alignParentTop="true"
            android:layout_alignBaseline="@+id/scoreTxt"
            android:textSize="26sp"
            android:layout_toLeftOf="@+id/scoreTxt"
            android:textStyle="bold"
            android:textColor="#eeeeee"
            />

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sumTxt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:elevation="8dp">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="50sp"
                android:id="@+id/button1"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:tag="0"
                android:onClick="chooseAnswer"
                android:background="#20ffffff"
                android:layout_margin="2dp"
                android:elevation="8dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="50sp"
                android:id="@+id/button2"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:tag="1"
                android:onClick="chooseAnswer"
                android:background="#20ffffff"
                android:layout_margin="2dp"
                android:elevation="8dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="50sp"
                android:id="@+id/button3"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:tag="2"
                android:onClick="chooseAnswer"
                android:background="#20ffffff"
                android:layout_margin="2dp"
                android:elevation="8dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="50sp"
                android:id="@+id/button4"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:tag="3"
                android:onClick="chooseAnswer"
                android:background="#20ffffff"
                android:layout_margin="2dp"
                android:elevation="8dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="50sp"
                android:id="@+id/button5"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:tag="4"
                android:background="#20ffffff"
                android:onClick="chooseAnswer"
                android:layout_margin="2dp"
                android:elevation="8dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="50sp"
                android:id="@+id/button6"
                android:layout_row="2"
                android:background="#20ffffff"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:tag="5"
                android:onClick="chooseAnswer"
                android:layout_margin="2dp"
                android:elevation="8dp" />
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/resultTxt"
            android:layout_below="@id/grid"
            android:textSize="40sp"
            android:textColor="#eeeeee"
            android:layout_centerHorizontal="true"
            />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80ffffff"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/resultTxtRl"
            android:textSize="40sp"
            android:textColor="#eeeeee"
            android:layout_above="@+id/playAgainBtn"
            android:layout_centerHorizontal="true"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Again"
            android:id="@+id/playAgainBtn"
            android:textSize="30sp"
            android:textStyle=""
            android:textColor="#eeeeee"
            android:background="#20ffffff"
            android:visibility="invisible"
            android:onClick="playAgain"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
